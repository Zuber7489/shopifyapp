/*header css start*/

.top_bar {
    background: #F5F5F5;
    padding: 12px 0;
    text-align: center;
}

.top_bar_menu ul {
	display: flex;
	list-style: none;
	margin: 0;
	padding: 0;
	justify-content: flex-end;
}

.top_bar_menu ul li {
	margin: 0;
	padding: 0;
	padding-left: 25px;
	line-height: 1;
}

.top_bar_menu ul li a {
	color: #888888;
	font-size: 1.4rem;
	text-decoration: none;
	line-height: 1;
	text-transform: capitalize;
}

.top_bar_menu ul li a:hover{
    color: #ffffff;
}

.logo {
	padding: 0px 40px;
	text-align: center;
	/* width: 15%; */
}

/* .logo img {
