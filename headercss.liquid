.cart_menu {
	/* width: 20%; */
}

.cart_menu ul {
	display: flex;
	justify-content: flex-end;
	align-items: center;
	list-style: none;
	margin: 0;
	padding: 0;
}

.cart_menu ul li {
	padding: 0 0px;
	padding-left: 13px;
}

.cart_menu ul li a img {
/* 	width: 19px;
	height: 25px; */
  /* filter: brightness(0) invert(1) !important; */
}

.cart-i img {
       /* max-width: 23px; */
    margin: 0 auto;
    height: 22px;
    display: block;
    width: auto;
  filter: brightness(0) invert(1) !important;
}

li.cart-i {
    position: relative;
}

.cart-i span.count {
    position: absolute;
    color: #fff;
    top: 55%;
    right: 4px; font-size:8px;
    transform: translateY(-50%);
}
.cart-i:hover span.count {
    color: #fff;
}

li.cart-i a {
    display: block;
}
.search_box {
	position: relative;
}

.search_box .serch_box_v {
	position: absolute;
	visibility: hidden;
	right: 0;
	top: 150%;
	opacity: 0; z-index:3;
	transition: transform .15s ease-in-out, opacity .15s ease-in-out, visibility .15s ease-in-out;
}

.search_box .serch_box_v.active {
	visibility: visible;
	opacity: 1;
	transition: transform .15s ease-in-out, opacity .15s ease-in-out, visibility .15s ease-in-out;
}

.search_box .serch_box_v form {
	display: flex;
}

.search_box a span {
	display: none;
	margin-left: -20px;
	margin-top: -1px;
}

.search_box a.active span {
	display: block;
	font-size: 21px;
}

.search_box a svg {
	display: block;
  /* filter: brightness(0) invert(1) !important; */
}

.search_box a.active svg {
	display: none;
}

.search_box a {
	text-decoration: none;
	color: #000;
	display: flex;
	justify-content: center;
	align-items: center;
}

.search_box .serch_box_v input {
	border: 1px solid #000;
	outline: none;
	border-radius: 50px;
	padding: 10px 20px;
	line-height: 1;
	padding-right: 50px;
    z-index:1;
}

.search_box .serch_box_v button {
	border: none;
	outline: none;
	border-radius: 0px;
	padding: 0px 10px;
	background: transparent;
	margin-left: -50px;
}

.serch_box_v {
	display: flex;
}

