	height: 38px;
} */
.logo img {
    max-width: 97px;
  filter: brightness(0) invert(1) !important;
}

.header_menu {
	display: flex;
	justify-content: space-between;
	padding:0 0;
	align-items: center;
    /* margin-top:10px; */
}

.h_menu {
	width: 100%;
  
}


.swwp{background:#ffffff !important;}




.h_menu .h_menu_ul {
	display: flex;
	align-items: center;
    justify-content: center;
	/* padding: 0 0px ; */
	margin: 0;	
  margin-right:40px;
	list-style: none;
}



.h_menu .h_menu_ul li {
	margin: 0;
	padding: 15px 10px 15px 30px;
    
  
}

.h_menu .h_menu_ul li a span{display:none}

.h_menu .h_menu_ul li a span svg{height:8px}

.header_m_wrap ul li a span{display:block !important;}

.search_box a svg {
    display: block;
