}
#header{position:absolute; width:100%; z-index:4; transition: transform .15s ease;}
header#header.fixed {
    position: fixed;
    top: 0;
}
#header:hover {
    background-color: #fff;
}
  #header.header-relative {
  /* position: relative; */
}
.header_meagamenu{
    z-index: 2 !important;
    visibility: hidden;
    opacity: 0;
    position: absolute;
    padding: 0;
    width: 100%;
    left: 0;
    top: 100%;
    -ms-scroll-chaining: none;
    overscroll-behavior: contain;
    text-align: left;
    background: #fff;
    transition: height .3s ease, opacity .3s ease;
  /* padding:20px; */
  box-shadow: 0 8px 15px -14px rgb(0 0 0 / 50%);
  margin-top:-10px;
  border-top:5px solid #ffffff;
}


.h_menu .h_menu_ul li:hover .header_meagamenu{ visibility: visible;
    opacity: 1; transition: height .3s ease, opacity .3s ease;}
.header_m_wrap{display:flex;max-width:1200px;margin:0 auto;}



.header_m_wrap ul{display: flex;
	align-items: center;
	padding: 0;
	margin: 0;
	list-style: none;
   flex-wrap:wrap;

}

.header_m_wrap ul li a span{padding-bottom:20px}
.header_m_wrap ul li a span img{display:block;}
.header_m_wrap ul li a{
text-decoration: none;
    font-size: 1.4rem;
    color: #000;
    -webkit-transition: .5s ease all;
    -o-transition: .5s ease all;
    transition: .5s ease all;
    padding-bottom: 5px;
   text-transform: uppercase;
}



.h_menu .h_menu_ul li:hover .header_m_wrap ul li a{border-bottom:none;color:#000}



.header_m_wrap ul li a:hover{color:#9e9e9e}


.header_m_wrap ul li{text-align:center;padding:20px !important;max-width:170px}

.h_menu .h_menu_ul li a {
	text-decoration: none;
	font-size: 1.4rem;
	color: #fff;
	-webkit-transition: 0.5s ease all;
	-o-transition: 0.5s ease all;
