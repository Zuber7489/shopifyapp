{% comment %}
  Custom Cart Page Template - Integrates with custom-cart-complete snippet
  This template works with the custom cart functionality instead of conflicting with it
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width{% if cart == empty %} is-empty{% else %} section-{{ section.id }}-padding{% endif %}">
  <div class="title-wrapper-with-link">
    <h1 class="title title--primary">{{ 'sections.cart.title' | t }}</h1>
    <a href="{{ routes.all_products_collection_url }}" class="underlined-link">{{ 'general.continue_shopping' | t }}</a>
  </div>

  {% if cart == empty %}
    <!-- Empty Cart State -->
    <div class="cart__warnings">
      <h1 class="cart__empty-text">{{ 'sections.cart.empty' | t }}</h1>
      <a href="{{ routes.all_products_collection_url }}" class="button">
        {{ 'general.continue_shopping' | t }}
      </a>

      {%- if shop.customer_accounts_enabled and customer == nil -%}
        <h2 class="cart__login-title">{{ 'sections.cart.login.title' | t }}</h2>
        <p class="cart__login-paragraph">
          {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
        </p>
      {%- endif -%}
    </div>
  {% else %}
    <!-- Cart with Items - Use Custom Cart Snippet -->
    <div class="custom-cart-page">
      {% render 'custom-cart-complete' %}
    </div>
  {% endif %}
</div>

<style>
.custom-cart-page {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
}

.custom-cart-page .custom-cart-container {
  position: relative;
  top: auto;
  right: auto;
  width: 100%;
  height: auto;
  z-index: auto;
  display: block;
  transform: none;
  box-shadow: none;
  border-radius: 8px;
  border: 1px solid #e5e7eb;
  margin-top: 24px;
}

.custom-cart-page .custom-cart-overlay {
  display: none;
}

.custom-cart-page .custom-cart-content {
  position: relative;
  width: 100%;
  height: auto;
  max-height: none;
  overflow: visible;
}

.custom-cart-page .free-shipping-progress {
  border-radius: 8px 8px 0 0;
  border-bottom: 1px solid #e5e7eb;
}

.custom-cart-page .cart-header {
  border-bottom: 1px solid #e5e7eb;
}

.custom-cart-page .cart-items-container {
  max-height: 600px;
  overflow-y: auto;
}

.custom-cart-page .bundle-save-section {
  border-top: 1px solid #e5e7eb;
  border-bottom: 1px solid #e5e7eb;
}

.custom-cart-page .checkout-section {
  border-radius: 0 0 8px 8px;
  border-top: 1px solid #e5e7eb;
}

/* Responsive adjustments for cart page */
@media (max-width: 768px) {
  .custom-cart-page .custom-cart-content {
    width: 100%;
  }
  
  .custom-cart-page .cart-items-container {
    max-height: 500px;
  }
}

/* Hide cart toggle buttons on cart page since we're showing the full cart */
.custom-cart-page [data-cart-toggle] {
  display: none;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize custom cart for the cart page
  if (typeof window.CustomCart !== 'undefined') {
    // If custom cart is already initialized, just open it
    if (window.customCart) {
      window.customCart.openCart();
    } else {
      // Initialize new instance for cart page
      window.customCart = new window.CustomCart();
      window.customCart.openCart();
    }
  } else {
    // Fallback if custom cart isn't loaded
    console.warn('Custom cart not available');
  }
});
</script>

{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "t:sections.main-cart-items.settings.show_vendor.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %} 